
//===============================================================
// variable
//===============================================================
//font-size
$siz_xl = 120px
$siz_lg = 80px
$siz_md = 56px
$siz_st = 48px

//font-weight
$wit_light = 200

$shadow = 2px 4px 8px rgba(0,0,0,.12)

//===============================================================
// mixin
//===============================================================
title(){
	font-size: $size_lg;
	line-height: 1.2;
	opacity: .8;
	margin-bottom: 16px;

	+mq(gt-md){
		font-size: $siz_md;
		font-size: 3.2vw;
		font-weight: $wit_light;
	}
}

caption(){
	opacity: .8;
	margin-top: 24px;
	max-width: 360px;
	max-width: 20vw;
}

headline(){
	font-size: $siz_lg;
	font-weight: $weight_bolder;

	+mq(gt-md){
		font-size: $siz_xl;
		line-height: 1.2;
	}
	+mq(gt-xl){
		font-size: 7.2vw;
	}
}

cards(){
	padding: 40px 80px;
	box-shadow: $shadow;
	position: relative;
	background-color: $brand_text;

	+mq(gt-md){
		// max-width: 50%;
		padding: 80px 120px;
	}
}

mark(){
	font-size: $siz_lg;
	font-weight: $weight_bolder;

	+mq(gt-md){
		font-size: $siz_xl;
		line-height: 1;
	}
	+mq(gt-xl){
		font-size: 7.2vw;
	}
}
//===============================================================
// selector
//===============================================================
$spacer 		= $pre+"spacer"
$banner 		= $pre+"banner"
$section 		= $pre+"section"
$gallery 		= $pre+"gallery"
$footer 		= $pre+"footer"
$menu 			= $pre+"menu"
$vipic 			= $pre+"vipic"

//===============================================================
// rules
//===============================================================
html,body{
	background-color: #28292e;
	color: $color_white;
	font-weight: $wit_light;

	+mq(gt-xl){
		font-size: 1vw;
	}
}
a{
	color: $brand_text;
}
{$container}{
	max-width: $container_width;
	padding: $container_gutter;
	margin: 0 auto;
}
{$wrapper}{
	&__{
		&container{
			// padding: 24px;
		}
	}
}
{$spacer}{
	padding: 40px 0;

	+mq(gt-md){
		padding: 80px 0;
	}
}
{$header}{
	padding: 32px;
	text-align: center;

	+mq(gt-md){
		padding: 80px 40px;
	}
	&__{
		&groom,
		&bride{
			headline();
		}
		&weds{
			color: $brand_text;
			font-size: $size_lg;

			+mq(gt-xl){
				font-size: 2vw;
			}
		}
	}
}

{$banner}{
	&__{
		&container{
			padding: 40px 0;

			+mq(gt-md){
				padding: 80px 0;
			}
		}
		&thumb{
			margin: 0 auto;
			text-align: center;
			line-height: 0;
			position: relative;
			z-index: 1;
			box-shadow: $shadow;

			+mq(gt-md){
				max-width: 50%;
			}
			img{
				max-width: 100%;
				height: auto;
			}
		}
		&main{
			cards();

			+mq(gt-md){
				max-width: 50%;
				margin-top: -360px;
			}
		}
		&content{
			position: relative;
			z-index: 11;
		}
		&title{
			title();
		}
		&caption{
			caption();
		}
		&mark{
			mark();
		}
	}
}

{$section}{

	&__{
		&header{
			text-align: center;
			margin-bottom: 80px;
		}
		&headline{
			headline();

			&:after{
				content: "";
				display: block;
				margin: 8px auto;
				box(60px, 2px);
				background-color: currentColor;
			}
		}
		&desc{
			margin-top: 24px;
		}
		&container{
			display: flex;
		}
		&main{
			flex: 1;
		}
		&aside{
			flex: 1;
		}
		&paper{
			cards();
			height: 100%;
		}
		&title{
			title();
		}
		&caption{
			caption();
		}
		&mark{
			mark();
		}
	}
}

{$vipic}{
	&s{
		padding: 80px;
		position: relative;
		z-index: 1;

		&__{
			&title{
				font-size: $size_lg;
				color: $brand_text;
				margin-bottom: 32px;
			}
			&block{
				& ~ &{
					margin-top: 80px;
				}
			}
			&container{
				margin-left: -200px;
			}
			&list{
				display: flex;
				margin-left: -32px;
			}
			&item{
				padding-left: 32px;
			}
		}
	}
	&__{
		&container{
			background-color: $base_text;
			padding: 24px;
			box-shadow: 12px 16px 20px rgba(0,0,0,0.24);
			box(240px,(240px/16*9));
		}
		&header{
			display: block;
		}
	}
}

{$gallery}{
	&s{
		display: flex;
		justify-content: space-between;
		margin-left: -24px;

		&__item{
			padding-left: 24px;
			flex: 1;
		}
	}
	&{
		padding: 24px;
		// background-color: $brand_text;
		background-color: $color_white;
		box-shadow: $shadow;
		color: $base_text;
	}
}

{$footer}{
	padding: 40px 0;
	color: $muted_text;

	// {$container}{
	// 	max-width: 1200px;
	// }
	&__{
		&container{
			display: flex;
			justify-content: space-between;
		}
		&nav{

		}
		&item{
			color: $muted_text;
		}
		&brand{
			max-width: 50%;
			display: flex;
		}
		&logo{
			color: $brand_text;
			font-size: $size_xl;
			margin-right: 40px;
			font-weight: $weight_bolder;
		}
		&caption{
			color: $muted_text;
			max-width: 360px;
		}
	}
}

{$menu}{
	font-size: $size_sm;

	&__{
		&container{
			position: fixed;
			right: 32px;
			top: @right;
			z-index: 9000;
		}
		&label{
			position: relative;
			z-index: 10;
			cursor: pointer;
			// padding: 8px 16px;
			// box-shadow: $shadow;
			// background-color: $base_text;

			&:after{
				content: "";
				box(20px,2px);
				color: $brand_text;
				background-color: currentColor;
				display: block;
				margin-left: auto;
				margin-top: 4px;

				^[-1]:hover:after,
				^[0]--active &{
					box-shadow: 0px 6px 0 currentColor, 0px 12px 0 currentColor;
				}
			}
		}
		&value{
			min-height: 20px;
		}
		&main{
			position: absolute;
			top: -16px;
		    right: @top;
			background-color: $base_text;
			box-shadow: $shadow;
		    padding-top: 60px;
		    min-width: 200px;
		    display: none;

		    ^[0]--active &{
		    	display: block;
		    }
		}
		&list{
			padding: 8px 0;
		}
		&item{
			display: block;
			padding: 8px 16px;
			text-align: right;

			&:hover{
				background-color: $brand_text;
				color: $color_white;
			}
		}
	}
}